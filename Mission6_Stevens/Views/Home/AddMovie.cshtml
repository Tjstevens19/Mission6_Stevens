@model AddMovieModel
@{
    ViewData["Title"] = "Add Movie";
}

<h1>Add Movie</h1>

<form method="post">
    <div>
        <label asp-for="Category">Category</label>
        <select asp-for="Category" required>
            <option value="Action">Action</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Horror">Horror</option>
            <option value="Miscellaneous">Miscellaneous</option>
            <option value="Television">Television</option>
            <option value="VHS">VHS</option>
        </select>
    </div>

    <div>
        <label asp-for="Subcategory">Subcategory</label>
        <select asp-for="Subcategory">
            <option value="">None</option> <!-- Default option with value set to empty string (null) -->
            <option value="Suspense">Suspense</option>
            <option value="Adventure">Adventure</option>
        </select>
    </div>


    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" required>
    </div>

    <div>
        <label asp-for="Year">Release Year</label>
        <input asp-for="Year" type="number" required>
    </div>

    <div>
        <label asp-for="Director">Director(s)</label>
        <input asp-for="Director" required>
    </div>

    <div>
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false" selected>No</option>
        </select>
    </div>

    <div>
        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo">
    </div>

    <div>
        <label asp-for="Notes">Notes (max 25 characters)</label>
        <input asp-for="Notes" maxlength="25">
    </div>

    <div>
        <button type="submit">Add Movie</button>
    </div>
</form>
