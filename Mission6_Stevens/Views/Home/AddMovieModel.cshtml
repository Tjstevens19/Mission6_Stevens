@page
@* @model AddMovieModel *@
@{
    ViewData["Title"] = "Add Movie";
}

<h1>Add Movie</h1>

<form method="post">
    <div>
        <label asp-for="Category">Category</label>
        <select asp-for="Category" asp-items="Model.CategoryList"></select>
            <option value="Action">Action</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Horror">Horror</option>
            <option value="Miscellaneous">Miscellaneous</option>
            <option value="Television">Television</option>
            <option value="VHS">VHS</option>

    </div>
    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" required>
    </div>

    <div>
        <label for="director">Director:</label>
        <input type="text" id="director" name="Director" required>
    </div>

    <div>
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="Genre" required>
    </div>

    <div>
        <label for="releaseYear">Release Year:</label>
        <input type="number" id="releaseYear" name="ReleaseYear" required>
    </div>

    <div>
        <label for="rating">Rating:</label>
        <select id="rating" name="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div>
        <label for="edited">Edited:</label>
        <select id="edited" name="Edited" required>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div>
        <label for="lentTo">Lent To:</label>
        <input type="text" id="lentTo" name="LentTo">
    </div>

    <div>
        <label for="notes">Notes (max 25 characters):</label>
        <input type="text" id="notes" name="Notes" maxlength="25">
    </div>

    <div>
        <button type="submit">Add Movie</button>
    </div>
</form>
